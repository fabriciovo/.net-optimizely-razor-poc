@using EPiServer.ServiceLocation
@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@using razor_poc.Infrastructure.Services
@using razor_poc.Models.ViewModels
@model BasePage

@inject IContentHelper contentHelper

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=10" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="@Model.MetaTitle" />
    <meta property="og:title" content="@Model.MetaTitle" />
    <meta name="description" content="@Model.MetaDescription" />
    <meta name="keywords" content="@(string.Join(",",Model.MetaKeywords??Enumerable.Empty<string>()))" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,300;0,400;0,500;0,600;0,700;1,500;1,600;1,700&display=swap" rel="stylesheet">
   
    <title>@Model.Title</title>
    @Html.RequiredClientResources("Header")
    <style>
        html{
            background-color: #662079;
            font-family: Nunito;
            color: white;
        }
        body {
            padding: 0;
            margin: 0;
        }
    </style>
</head>


<body>
    @await Html.RenderEPiServerQuickNavigatorAsync()
    <div>
        @await Component.InvokeAsync("Header")
        @RenderBody()
        @await Component.InvokeAsync("Footer")
    </div>
    @Html.RequiredClientResources("Footer")
</body>
</html>
